{
  "name": "zephir-ide",
  "main": "./lib/main",
  "version": "0.4.0",
  "description": "Zephir language support for Atom",
  "repository": "https://github.com/nkt/zephir-ide.git",
  "license": "MIT",
  "engines": {
    "atom": ">=0.174.0 <2.0.0"
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "getCompletionProvider"
      }
    }
  },
  "linter-package": true,
  "linter-implementation": "linter",
  "dependencies": {
    "bluebird": "^2.9.24",
    "fuzzaldrin": "^2.1.0",
    "zephir": "^0.1.3"
  },
  "devDependencies": {
    "babel-eslint": "^3.0.1",
    "eslint": "^0.19.0",
    "xml2js": "^0.4.8"
  },
  "scripts": {
    "prebuild": "rm -rf lib/",
    "build": "babel -d lib/ src/",
    "start": "npm run build -- --watch",
    "prepublish": "npm run build"
  }
}
